{
  "name": "nyan-task-notes",
  "version": "0.1.0",
  "description": "Offline task helper with local file DB (separate from app DB)",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --inspect=5858",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "watch": "npm run watch:main & npm run watch:renderer",
    "watch:main": "tsc -w",
    "watch:renderer": "tsc -p tsconfig.renderer.json -w"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-store": "^8.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.11",
    "electron": "^32.0.0",
    "electron-rebuild": "^3.6.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.example.nyantasknotes",
    "asar": true,
    "files": [
      "dist/**",
      "db/**",
      "package.json",
      "index.html"
    ]
  },
  "author": "",
  "license": "ISC"
}
